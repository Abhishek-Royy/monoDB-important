        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .main {
            width: 100%;
            height: calc(100% - 4.5vw);
            display: flex;
            align-items: center;
            justify-content: center;
               background: linear-gradient(rgb(235, 235, 235), #888df5);

        }

        .sub-main {
